                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                                </li>
                              @*   <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="DetPedidos" asp-action="Index">Detalle Pedidos</a>
                                </li> *@
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="CabPedidos" asp-action="Index">Pedidos</a>
                                </li>
                            </ul>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a class="nav-link btn btn-link text-dark" asp-controller="Home" asp-action="Logout">Cerrar Sesión</a>
                            }
                        </div>
                    </div>
                </nav>

           


